{
  "name": "webrtc-signaling-server",
  "version": "1.0.0",
  "description": "WebRTC signaling server for peer-to-peer connections",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "bun server.ts",
    "dev": "bun --watch server.ts",
    "build": "bun build server.ts --outdir ./dist --target bun",
    "prod": "bun run dist/server.js"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}